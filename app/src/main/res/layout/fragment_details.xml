<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Price:"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/realestate_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="30"
                    android:minHeight="48dp"
                    android:textColorHint="#979593"
                    android:hint="SG$100000"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Address:"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/realestate_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="60"
                    android:minHeight="48dp"
                    android:textColorHint="#979593"
                    android:hint="building number, Street name, zip code"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Type:"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/realestate_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColorHint="#979593"
                    android:hint="4-room apartment"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Sq ft:"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/realestate_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:textColorHint="#979593"
                    android:hint="888"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Agent:"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/realestate_agent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColorHint="#979593"
                    android:hint="name"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"/>
            </TableRow>

            <RadioGroup
                android:id="@+id/realestate_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="100dp"
                    android:buttonTint="@color/white"
                    android:layoutDirection="rtl"
                    android:text="Rent"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="or"
                    android:textSize="25dp"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:buttonTint="@color/white"
                    android:text="Sale"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

            </RadioGroup>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:textSize="20dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/Location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/button_save"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:text="Next"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/roundedbutton"
            android:layout_marginTop="20dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

</FrameLayout>